#!/bin/sh

mkdir temp;
java -cp "clojure.jar:src" clojure.main \
  --eval "(set! *compile-path* \"temp\")" \
  --eval "(compile 'hello)"

cwd="$(pwd)";
root="$(dirname $0)";

cd "$root/temp";

jar xf ../clojure.jar;

echo "Main-Class: hello" > manifest.mf;

jar cfm ../hello.jar manifest.mf * clojure;

cd "$cwd";
